<html>
<head>
  <title>Linesman - Showing all profiles</title>
  <link rel="stylesheet" href="${application_url}/media/css/list.css"/>
  <script type="text/javascript"
      src="${application_url}/media/js/jquery-1.5.2.min.js"></script>
  <script type="text/javascript"
      src="${application_url}/media/js/jquery.dataTables.min.js"></script>
  <script type="text/javascript"
      src="${application_url}/media/js/tables.js"></script>
</head>
<body>

<table class="display" id="sessionlist">
  <thead>
    <tr>
      <th>URI</th>
      <th>Duration</th>
      <th>Timestamp</th>
      <th></th>
    </tr>
  </thead>
  <tfoot>
    <tr>
      <th>
        <input type="text" name="URI" value="Filter by URI" class="search_init"/>
      </th>
      <th>&nbsp;</th>
      <th>
        <a href="#" id="delete_listed">Permanently delete filtered sessions</a>
      </th>
      <th></th>
    </tr>
  </tfoot>
  <tbody>
% for uuid, session in history.items():
    <tr id="${session.uuid}">
      <td>
        <a href="${application_url}/profiles/${session.uuid}">
          ${session.path}
        </a>
      </td>
      <td>${session.duration}</td>
      <td>${session.timestamp}</td>
      <td class="center">
        <a href="${application_url}/delete/${session.uuid}" class="delete">delete</a>
      </td>
    </tr>
% endfor
  </tbody>
</table>

</body>
</html>
